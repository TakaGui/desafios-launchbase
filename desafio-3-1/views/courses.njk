{% extends 'layout.njk' %}

{% block head %}
  <title>Rocketseat - Cursos</title>
{% endblock %}
  

{% block content %}
  <div id="wrapper">
    <h1>Cursos</h1>
  </div>
  
  <section class="cards">
    <div class="card" id="starter">
      <div class="card__image-container">
        <img 
          src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" 
          alt="starter-logo"
        >
      </div>

      <div class="card__content">
        <h1>Starter</h1>

        <div class="card__info">
          <p>5 módulos</p>
          <p class="card__price">
            Free
          </p>
        </div>
      </div>
    </div>

    <div class="card" id="launchbase">
      <div class="card__image-container">
        <img 
          src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg"
          alt="launchbase-logo"
        >
      </div>

      <div class="card__content">
        <h1>Launchbase</h1>

        <div class="card__info">
          <p>66 módulos</p>
          <p class="card__price">
            Paid
          </p>
        </div>
      </div>
    </div>

    <div class="card" id="gostack">
      <div class="card__image-container">
        <img 
          src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" 
          alt="gostack-logo"
        >
      </div>

      <div class="card__content">
        <h1>GoStack</h1>

        <div class="card__info">
          <p>90 módulos</p>
          <p class="card__price">
            Paid
          </p>
        </div>
      </div>
    </div>
  </section> <!-- End section cards -->
{% endblock %}


{% block modal %}
  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">
          close
        </i>
      </a>

      <a class="maximize-modal">  
        maximize
      </a>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>
{% endblock %}

{% block server %}
  <script src="./scripts.js"></script>
{% endblock %}
